{
  "compilerOptions": {
    "target": "es3",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./src",
    "strict": true,
    "downlevelIteration": true,
    "lib": ["esnext", "dom"]
  },
  "include": ["lib"],
  "exclude": ["lib/**/*.test.*"],
  "typedocOptions": {
    "mode": "modules",
    "out": "docs"
  }
}
